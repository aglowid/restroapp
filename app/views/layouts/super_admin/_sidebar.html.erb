<!-- Main sidebar -->
<div class="sidebar sidebar-main">
	<div class="sidebar-content">
		<!-- User menu -->
		<div class="sidebar-user">
			<div class="category-content">
				<div class="media">

						<a href="#" class="media-left"><img src="<%=image_path 'missing_user.png'%>" class="img-circle img-sm" alt=""></a>
					<div class="media-body">
						<span class="media-heading text-semibold"><%#=current_user.first_name.capitalize%></span>
						<div class="text-size-mini text-muted">
							<i class="icon-pin text-size-small"></i>
							<% if current_user.present? %>
								<%= current_user.try(:city) %> , <%= current_user.try(:state) %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /user menu -->
		<!-- Main navigation -->
		<div class="sidebar-category sidebar-category-visible">
			<div class="category-content no-padding">
				<ul class="navigation navigation-main navigation-accordion">
					<!-- Main -->
					<li class="<%#=active_class(super_admin_dashboard_index_path)%>" ><a href="<%#=super_admin_dashboard_index_path%>"><i class="icon-home4"></i> <span>Dashboard</span></a></li>

					<li id="business">
						<a href="#" id="business-link" class="has-ul"><i class="icon-stack2"></i> <span>Businesses	</span></a>
						<ul>
							<!-- <li class="<%#=active_class(super_admin_locations_path)%>"><a href="<%#= super_admin_locations_path %>">Suggested Businesses</a></li> -->
							<li class="<%#=active_class(super_admin_locations_path(:tier_name=>"Free"))%>">
								<a href="<%#= super_admin_locations_path(:tier_name=>"Free") %>" >Free Businesses</a>
							</li>
							<li class="<%#=active_class(super_admin_locations_path(:tier_name=>"Standard")) %>"><a href="<%#= super_admin_locations_path(:tier_name=>"Standard") %>">Standard Businesses</a></li>
							<li class="<%#=active_class(super_admin_locations_path(:tier_name=>"Advanced")) %>"><a href="<%#= super_admin_locations_path(:tier_name=>"Advanced") %>" >Advanced Businesses</a></li>
							<li class="<%#=active_class(all_location_super_admin_locations_path)%>"><a href="<%#= all_location_super_admin_locations_path %>">All Businesses</a></li>
							<li class="<%#=active_class(unclaimed_business_super_admin_locations_path)%>"><a href="<%#= unclaimed_business_super_admin_locations_path %>">Other Businesses</a></li>
							<!-- <li class="<%#=active_class(new_super_admin_user_path)%>"><a href="<%#= new_super_admin_user_path %>">Add Businesses</a></li> -->
						</ul>
					</li>
					<li class="<%#=active_class(super_admin_games_path)%>">
						<a href="<%#=super_admin_games_path%>"><i class="icon-calculator4"></i><span>Games</span></a>
					</li>
					<li class="<%#=active_class(super_admin_leaderboard_index_path)%>">
						<a href="<%#=super_admin_leaderboard_index_path%>"><i class="icon-width"></i><span>Leaderboard</span></a>
					</li>
					<li id="notification" class="<%#=active_class(super_admin_admin_notifications_path)%>">
						<a href="<%#=super_admin_admin_notifications_path%>" id="notification-link" class="has-ul"><i class="icon-list"></i><span>Notifications</span></a>
						<ul>
							<li class="<%#= active_class(super_admin_admin_notifications_path(:notification_type =>"past")) %>">
								<a href="<%#= super_admin_admin_notifications_path(:notification_type =>"past") %>">Past</a>
							</li>
							<li class="<%#= active_class(super_admin_admin_notifications_path(:notification_type =>"upcoming")) %>">
								<a href="<%#= super_admin_admin_notifications_path(:notification_type =>"upcoming") %>">Upcoming</a>
							</li>
							<li class="<%#= active_class(super_admin_admin_notifications_path) %>">
								<a href="<%#= super_admin_admin_notifications_path %>">All</a>
							</li>
						</ul>
					</li>


					<li class="<%#= active_class(super_admin_general_reports_path) %>">
						<a href="<%#= super_admin_general_reports_path %>"><i class="icon-stack2"></i><span>Reports</span></a>
					</li>
					<!-- /main -->
				</ul>
			</div>
		</div>
		<!-- /main navigation -->
	</div>
</div>
<!-- /main sidebar -->
<script type="text/javascript">
	$( window ).load(function() {
		$("#business-link").click(function(){
			$(this).addClass("sub-ul");
		});
		$("#notification-link").click(function(){
			$(this).addClass("sub-ul");
		});
	});
</script>
