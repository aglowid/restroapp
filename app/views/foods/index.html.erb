<%= content_for :header do %>
  Food
<% end %>
<%= content_for :sub_header do %>
  <li class="active"> Listing Food </li>
<% end %>
<%= content_for :add_btn do %>
  <%= link_to new_food_path , class: "btn border-danger-300 text-danger-300 btn-flat btn-rounded btn-icon btn-sm has-text" do %>
    <i class="icon-plus3"></i>
  <% end %>
<% end %>

<%= render '/users/base/page_header' %>

<div class="content">
  <div class="panel panel-flat border-top-xlg border-top-theme-color">
    <div class="panel-body table-width">
      <table class="table datatable-basic">
        <thead>
        <tr id="sort_data">
          <th>Name</th>
          <th>Ingredients</th>
          <th>Description</th>
          <th>Food type</th>
          <th>Food category</th>
          <th>Food label</th>
          <th>Price</th>
          <th></th>
          <th></th>
          <th class ="text-center" id="list_action"><b>Action</b></th>
        </tr>
        </thead>
        <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.ingredients %></td>
            <td><%= food.description %></td>
            <td><%= food.food_category.name %></td>
            <td><%= food.food_type.name %></td>
            <td><%= food.food_label.name %></td>
            <td><%= food.price %></td>
            <td><%= link_to 'Show', food %></td>
            <td><%= link_to 'Edit', edit_food_path(food) %></td>
            <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
