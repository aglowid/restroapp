  </div>
  <div class="field">
    <%= f.label :food_type_id %><br>
    <%= f.select :food_type_id, options_for_select(@food_type) %>
  </div>
  <div class="field">
    <%= f.label :food_label_id %><br>
    <%= f.select :food_label_id, options_for_select(@food_label) %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
