<div class="content">
  <div class="panel panel-flat border-top-xlg border-top-theme-color">
    <div class="panel-body panel-width">
      <div class="row">
        <div class="col-lg-6">
          <%= form_for @dinning_table,:html =>{:class => "form-validate-jquery", :novalidate=>"novalidate"} do |f| %>

              <div class="form-group  has-feedback">
                <%= f.label :table_no %>
                <%= f.number_field :table_no , class: "form-control"%>     
              </div>

              <div class="form-group  has-feedback">
                <%= f.label :max_seat %>
                <%= f.number_field :max_seat , class: "form-control"%>     
              </div>

              <div class="form-group">
                <%= f.label :is_available, :class => "mrg-rght" %>
                <label class="switch mrg-btm">
                  <%= f.check_box :is_available, class: "form-control" %>
                  <div class="slider round"></div>
                </label>  
              </div>

              <div class="actions">
                <div class="row">
                  <div class="col-lg-6">
                    <%= f.submit :class => "btn bg-teal-400 btn-ladda btn-ladda-spinner " %>
                  </div>
                </div>
              </div>
 
          <!-- </div> -->
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
