
<%= content_for :header do %>
  Dinning tables
<% end %>
<%= content_for :sub_header do %>
  <li class="active"> Listing Dinning tables </li>
<% end %>
<%= content_for :add_btn do %>
  <%= link_to new_dinning_table_path , class: "btn border-danger-300 text-danger-300 btn-flat btn-rounded btn-icon btn-sm has-text" do %>
    <i class="icon-plus3"></i>
  <% end %>
<% end %>
<%= render '/users/base/page_header' %>


<div class="content">
  <div class="panel panel-flat border-top-xlg border-top-theme-color">
    <div class="panel-body table-width">
      <table class="table datatable-basic">
        <thead>
        <tr id="sort_data">
          <th>Table no</th>
          <th>Max seat</th>
          <th>Is available</th>
          <th class ="text-center" id="list_action"><b>Action</b></th>
        </tr>
        </thead>
        <tbody>
        <% @dinning_tables.each do |dinning_table| %>
          <tr>
            <td><%= dinning_table.table_no %></td>
            <td><%= dinning_table.max_seat %></td>
            <td><%= dinning_table.is_available %></td>
            <td class="text-center">
              <ul class="icons-list icons-list-vertical">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="icon-menu9 redicon"></i></a>
                    
                <ul class="dropdown-menu dropdown-menu-right">
                  <li><%= edit_link(edit_dinning_table_path(dinning_table)) %></li>
                  <li><%= delete_link(dinning_table_path(dinning_table)) %></li>
                </ul>
              </ul>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


