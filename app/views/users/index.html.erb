<%= content_for :header do %>
  Users 
<% end %>
<%= content_for :sub_header do %>
  <li class="active"> Listing Users </li>
<% end %>
<%= content_for :add_btn do %>
  <%= link_to new_user_path , class: "btn border-danger-300 text-danger-300 btn-flat btn-rounded btn-icon btn-sm has-text" do %>
    <i class="icon-plus3"></i>
  <% end %>
<% end %>

<%= render '/users/base/page_header' %>

<div class="content">
  <div class="panel panel-flat border-top-xlg border-top-theme-color">
    <div class="panel-body table-width">
      <table class="table datatable-basic">
        <thead>
          <tr id="sort_data">
            <th><b>Name</b></th>
            <th><b>Email</b></th>
            <th><b>Contact no</b></th>
            <th><b>Gender</b></th>
            <th><b>User Type</b></th>
            <th class ="text-center" id="list_action"><b>Action</b></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.contact_no %></td>
              <td><%= user.gender %></td>
              <td><%= user.user_type.try(:name) %></td>
              <td class="text-center">
                <ul class="icons-list icons-list-vertical">
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="icon-menu9 redicon"></i></a>
                      
                  <ul class="dropdown-menu dropdown-menu-right">
                    <li><%= edit_link(edit_user_path(user)) %></li>
                    <li><%= delete_link(user_path(user)) %></li>
                  </ul>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

